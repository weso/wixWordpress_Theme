<main class="content">
  <input type="hidden" id="path" value="{{path}}" />
  <input type="hidden" id="home-header-0-indicator" value="{{data.home-header.0.indicator}}" />
  <input type="hidden" id="home-header-0-tendency" value="{{data.home-header.0.tendency}}" />
  <input type="hidden" id="home-header-0-limit" value="{{data.home-header.0.limit}}" />
  <input type="hidden" id="home-header-0-value" value="{{data.home-header.0.value}}" />
  <input type="hidden" id="home-header-1-indicator" value="{{data.home-header.1.indicator}}" />
  <input type="hidden" id="home-header-1-tendency" value="{{data.home-header.1.tendency}}" />
  <input type="hidden" id="home-header-1-limit" value="{{data.home-header.1.limit}}" />
  <input type="hidden" id="home-header-1-value" value="{{data.home-header.1.value}}" />
  <input type="hidden" id="home-header-2-indicator" value="{{data.home-header.2.indicator}}" />
  <input type="hidden" id="home-header-2-tendency" value="{{data.home-header.2.tendency}}" />
  <input type="hidden" id="home-header-2-limit" value="{{data.home-header.2.limit}}" />
  <input type="hidden" id="home-header-2-value" value="{{data.home-header.2.value}}" />
  <input type="hidden" id="home-header-3-indicator" value="{{data.home-header.3.indicator}}" />
  <input type="hidden" id="home-header-3-tendency" value="{{data.home-header.3.tendency}}" />
  <input type="hidden" id="home-header-3-limit" value="{{data.home-header.3.limit}}" />
  <input type="hidden" id="home-header-3-value" value="{{data.home-header.3.value}}" />
  <div class="accordion">
    <article id="tab1">
      <aside>
        <header>
          <h1><strong class="percentage"></strong></h1>
          <h2>{{#labels}}{{home_tab_1}}{{/labels}}</h2>
        </header>
        <footer>
          <i class="fa fa-unlock-alt fa"></i>
        </footer>
      </aside>
      <section class="extra">
        <div class="extra-container-padding">
          <svg id="world" width="18em" height="18em" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:ev="http://www.w3.org/2001/xml-events" version="1.1" baseProfile="full">
            <defs>
              <pattern id="world-colour" patternUnits="userSpaceOnUse" width="100%" height="100%">
                  <image xlink:href="{{path}}/images/accordion/world.png" x="0" y="0" width="100%" height="100%" />
              </pattern>
              <pattern id="world-gray" patternUnits="userSpaceOnUse" width="100%" height="100%">
                  <image xlink:href="{{path}}/images/accordion/world_gray.png" x="0" y="0" width="100%" height="100%" />
              </pattern>
            </defs>
            <circle cx="50%" cy="50%" r="50%" stroke="black" stroke-width="0" fill="url(#world-gray)" />
            <path id="world-pie" d=""
              fill="url(#world-colour)" />
          </svg>
        </div>
        <footer>
          <h1><strong class="percentage"></strong> {{#labels}}{{home_of_countries}}{{/labels}}</h1>
          <h2>{{#labels}}{{home_tab_1_caption_1}}{{/labels}}</h2>
          <h2>{{#labels}}{{home_tab_1_caption_2}}{{/labels}} <a href="{{host}}/report">{{#labels}}{{home_learn_more}}{{/labels}}</a></h2>
        </footer>
      </section>
    </article>
    <article id="tab2">
      <aside>
        <header>
          <h1><strong class="percentage"></strong></h1>
          <h2>{{#labels}}{{home_tab_2}}{{/labels}}</h2>
        </header>
        <footer>
          <i class="fa fa-female"></i>
        </footer>
      </aside>
      <section class="extra">
        <div class="infographic-percentage extra-container-padding">
          <img class="infographic-icon" alt="" src="{{path}}/images/accordion/woman.svg" />
        </div>
        <footer>
          <h1><strong class="percentage"></strong> {{#labels}}{{home_of_countries}}{{/labels}}</h1>
          <h2>{{#labels}}{{home_tab_2_caption_1}}{{/labels}}</h2>
          <h2>{{#labels}}{{home_tab_2_caption_2}}{{/labels}} <a href="{{host}}/report">{{#labels}}{{home_learn_more}}{{/labels}}</a></h2>
        </footer>
      </section>
    </article>
    <article id="tab3">
      <aside>
        <header>
          <h1><strong class="percentage"></strong></h1>
          <h2>{{#labels}}{{home_tab_3}}{{/labels}}</h2>
        </header>
        <footer>
          <i class="fa fa-users"></i>
        </footer>
      </aside>
      <section class="extra">
        <div id="infographic-circles" class="infographic-circles extra-container-padding notranslate">
          <div class="model">
            <svg width="40" height="40" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:ev="http://www.w3.org/2001/xml-events" version="1.1" baseProfile="full">
              <defs>
            	</defs>
              <circle cx="50%" cy="50%" r="50%" fill="#00758A" />
              <circle cx="50%" cy="50%" r="50%" fill="#FACC2E" class="circle" />
            </svg>
            <p class="country"></p>
          </div>
        </div>
        <footer>
          <h1><strong class="percentage"></strong> {{#labels}}{{home_of_countries}}{{/labels}}</h1>
          <h2>{{#labels}}{{home_tab_3_caption_1}}{{/labels}}</h2>
          <h2>{{#labels}}{{home_tab_3_caption_2}}{{/labels}} <a href="{{host}}/report">{{#labels}}{{home_learn_more}}{{/labels}}</a></h2>
        </footer>
      </section>
    </article>
    <article id="tab4">
      <aside>
        <header>
          <h1><strong class="percentage"></strong></h1>
          <h2>{{#labels}}{{home_tab_4}}{{/labels}}</h2>
        </header>
        <footer>
          <i class="fa fa-random"></i>
        </footer>
      </aside>
      <section class="extra">
        <div id="map" class="extra-container"></div>
        <footer>
          <h1><strong class="percentage"></strong> {{#labels}}{{home_of_countries}}{{/labels}}</h1>
          <h2>{{#labels}}{{home_tab_4_caption_1}}{{/labels}}</h2>
          <h2>{{#labels}}{{home_tab_4_caption_2}}{{/labels}} <a href="{{host}}/report">{{#labels}}{{home_learn_more}}{{/labels}}</a></h2>
        </footer>
      </section>
    </article>
  </div>
  {{>by}}
  <div class="container">
    <h1 class="text-center">{{#labels}}{{home_title}}{{/labels}}</h1>
    <h2>{{#labels}}{{home_description}}{{/labels}} <a href="{{host}}/about" class="read-more">{{#labels}}{{read_more}}{{/labels}} <span>&#187;</span></a></h2>
    <!-- GRID -->
    <div class="grid-items">
      <a href="{{host}}/about" class="grid-item">
        <i class="fa fa-play fa-3x"></i>
        <h1>{{#labels}}{{home_video_box}}{{/labels}}</h1>
      </a>
      <a href="{{host}}/report" class="grid-item">
        <i class="fa fa-file-text fa-3x"></i>
        <h1>{{#labels}}{{home_report_box}}{{/labels}}</h1>
      </a>
      <a href="{{host}}/data" class="grid-item">
        <i class="fa fa-line-chart fa-3x"></i>
        <h1>{{#labels}}{{home_data_box}}{{/labels}}</h1>
      </a>
      <div class="grid-item grid-item-full illustrations">
        <article>
          <header>
            <h1>{{#labels}}{{home_illustration_1_title}}{{/labels}}</h1>
            <h2>{{#labels}}{{home_illustration_1_subtitle}}{{/labels}}</h2>
          </header>
          <img src="{{path}}/images/illustrations/illustration1.png" />
        </article>
        <article>
          <header>
            <h1>{{#labels}}{{home_illustration_2_title}}{{/labels}}</h1>
            <h2>{{#labels}}{{home_illustration_2_text}}{{/labels}}</h2>
          </header>
          <img src="{{path}}/images/illustrations/illustration2.png" />
        </article>
        <article>
          <header>
            <h1>{{#labels}}{{home_illustration_3_title}}{{/labels}}</h1>
            <h2>{{#labels}}{{home_illustration_3_text}}{{/labels}}</h2>
          </header>
          <img src="{{path}}/images/illustrations/illustration3.png" />
        </article>
        <aside class="illustration-buttons">
          <a href="javascript:void(0);" class="circle selected">1</a>
          <a href="javascript:void(0);" class="circle">2</a>
          <a href="javascript:void(0);" class="circle">3</a>
        </aside>
      </div>
      <div class="grid-item grid-item-big grid-item-taller">
        <h1>{{#labels}}{{home_top_five}}{{/labels}}</h1>
        <table class="ranking">
          <thead>
            <tr class="sorter" role="row">
              <th data-sort-type="text"><a class="empty" data-type="sorter"></a>Country</th>
              <th data-sort-type="number"><a class="empty" data-type="sorter"></a>Rank</th>
              <th data-sort-type="number"><a class="empty" data-type="sorter"></a>Universal Access</th>
              <th data-sort-type="number"><a class="empty" data-type="sorter"></a>Relevant content & use</th>
              <th data-sort-type="number"><a class="empty" data-type="sorter"></a>Freedom & Openness</th>
              <th data-sort-type="number"><a class="empty" data-type="sorter"></a>Empowerment</th>
            </tr>
          </thead>
          <tbody>
            {{#data.model.values}}
              <tr class="country-row">
                <td>
                  <img class="flag" alt="" src="{{img}}" />
                  <p class="country-name">{{name}}</p>
                </td>
                <td data-title="Rank">{{rank}}</td>
                <td data-title="Universal Access">{{UNIVERSAL_ACCESS}}</td>
                <td data-title="Relevant Content">{{RELEVANT_CONTENT_AND_USE}}</td>
                <td data-title="Freedom And Openness">{{FREEDOM_AND_OPENNESS}}</td>
                <td data-title="Empowerment">{{EMPOWERMENT}}</td>
              </tr>
            {{/data.model.values}}
          </tbody>
        </table>
        <p class="text-right">
          <a href="{{host}}/data/#table" class="read-more">{{#labels}}{{home_view_full_list}}{{/labels}} <span>&#187;</span></a>
        </p>
      </div>
      <div class="grid-item grid-item-taller follow-box">
        <div class="sign-up">
          <i class="fa fa-envelope fa-3x"></i>
          <h1>{{#labels}}{{home_follow_us}}{{/labels}}</h1>
          <p>{{#labels}}{{home_follow_us_description}}{{/labels}}</p>
          <div class="newsletter-bar">

              <!-- Begin MailChimp Signup Form -->
              <div id="mc_embed_signup">
                <form action="//thewebindex.us9.list-manage.com/subscribe/post?u=cbdb5637e8903f60626aa34f1&amp;id=cc01eda197" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>

                  <div class="mc-field-group">
                    <div class="newsletter-and-submit">
                      <input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" placeholder="{{#labels}}{{enter_your_email}}{{/labels}}" />
                      <button type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button">
                        {{#labels}}{{home_sign_up}}{{/labels}}
                      </button>
                    </div>
                  </div>
                  <div id="mc_embed_signup_scroll">
                    <div id="mce-responses" class="clear">
                      <div class="response" id="mce-error-response" style="display:none"></div>
                      <div class="response" id="mce-success-response" style="display:none"></div>
                    </div>
                  </div>
                  <!-- real people should not fill this in and expect good
                  things - do not remove this or risk form bot signups-->
                  <div style="position: absolute; left: -5000px;"><input type="text" name="b_cbdb5637e8903f60626aa34f1_cc01eda197" tabindex="-1" value=""></div>
                  <div class="clear"></div>

                </form>
              </div>
              <script type='text/javascript' src='//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js'></script>
              <script type='text/javascript'>(function($) {window.fnames = new Array();
              window.ftypes = new Array();fnames[0]='EMAIL';ftypes[0]='email';
              fnames[1]='FNAME';ftypes[1]='text';fnames[2]='LNAME';
              ftypes[2]='text';}(jQuery));
              var $mcj = jQuery.noConflict(true);</script>
              <!--End mc_embed_signup-->

          </div>
        </div>
        <div class="links">
          <ul>
            <li><a href="{{host}}/feed"><i class="fa fa-rss fa-3x"></i></a></li>
            <li><a href="https://twitter.com/webfoundation"><i class="fa fa-twitter fa-3x"></i></a></li>
            <li><a href="https://www.facebook.com/webfoundation"><i class="fa fa-facebook fa-3x"></i></a></li>
          </ul>
        </div>
      </div>
      <div class="line-behind-text news-header">
        <h3>{{#labels}}{{home_news}}{{/labels}}</h3>
      </div>
      <div>
        <div class="grid-item news">
          <header>
            {{{data.news.0.title}}}
          </header>
          <p class="content">
            {{{data.news.0.content}}}
          </p>
          <p class="text-right read-more">
            <a href="{{data.news.0.link}}">{{#labels}}{{read_more}}{{/labels}} <span>&#187;</span></a>
          </p>
        </div>
        <div class="grid-item tweet">
          <header>
            <a href="https://twitter.com/{{data.tweets.0.account.displayName}}">
              <i class="fa fa-twitter fa-3x"></i>
            </a>
            <a href="https://twitter.com/{{data.tweets.0.account.displayName}}" class="name">
              {{data.tweets.0.account.name}}
            </a>
            <a href="https://twitter.com/{{data.tweets.0.account.displayName}}" class="account">
              @{{data.tweets.0.account.displayName}}
            </a>
          </header>
          <p class="content">
            {{{data.tweets.0.content}}}
          </p>
        </div>
        <div class="grid-item news">
          <header>
            {{{data.news.1.title}}}
          </header>
          <p class="content">
            {{{data.news.1.content}}}
          </p>
          <p class="text-right read-more">
            <a href="{{data.news.1.link}}">{{#labels}}{{read_more}}{{/labels}} <span>&#187;</span></a>
          </p>
        </div>
        <div class="grid-item tweet">
          <header>
            <a href="https://twitter.com/{{data.tweets.1.account.displayName}}">
              <i class="fa fa-twitter fa-3x"></i>
            </a>
            <a href="https://twitter.com/{{data.tweets.1.account.displayName}}" class="name">
              {{data.tweets.1.account.name}}
            </a>
            <a href="https://twitter.com/{{data.tweets.1.account.displayName}}" class="account">
              @{{data.tweets.1.account.displayName}}
            </a>
          </header>
          <p class="content">
            {{{data.tweets.1.content}}}
          </p>
        </div>
        <div class="grid-item news">
          <header>
            {{{data.news.2.title}}}
          </header>
          <p class="content">
            {{{data.news.2.content}}}
          </p>
          <p class="text-right read-more">
            <a href="{{data.news.2.link}}">{{#labels}}{{read_more}}{{/labels}} <span>&#187;</span></a>
          </p>
        </div>
        <div class="grid-item tweet">
          <header>
            <a href="https://twitter.com/{{data.tweets.2.account.displayName}}">
              <i class="fa fa-twitter fa-3x"></i>
            </a>
            <a href="https://twitter.com/{{data.tweets.2.account.displayName}}" class="name">
              {{data.tweets.2.account.name}}
            </a>
            <a href="https://twitter.com/{{data.tweets.2.account.displayName}}" class="account">
              @{{data.tweets.2.account.displayName}}
            </a>
          </header>
          <p class="content">
            {{{data.tweets.2.content}}}
          </p>
        </div>
      </div>
    </div>
  </div>
  <script src="{{path}}/scripts/settings.js"></script>
  <script src="{{path}}/scripts/index.js"></script>
</main>
